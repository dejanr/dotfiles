[user]
  name = Dejan Ranisavljevic
  email = dejan.ranisavljevic@gmail.com

[gpg]
  program = gpg2

[github]
  user = dejanr

[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
	quotepath    = off
	pager        = diff-so-fancy | less
  editor       = vim
  excludesfile = ~/.gitignore
  autocrlf     = false
  filemode     = false

[fetch]
  prune = true

[push]
  default = current

[rebase]
  autosquash = true
  autostash  = true

[diff]
  tool                = vimdiff
  mnemonicPrefix      = true
  compactionHeuristic = true

[rerere]
  enabled = true

[alias]
  s = status
  # log all changes from latest pull
  c = log --no-merges --stat @{1}..
  # log with diff
  ld = log -p
  br = branch
  co = checkout
  pom = push origin master
  rank = shortlog -sn --no-merges
  who = shortlog -s --
  # treeish like history
  hist = log --no-merges --pretty=format:\"%h %ad | [%an] %s%d\" --graph --date=short
  merge-their = git merge --strategy-option their
  pure = clean -fdx -e .vimrc

[pager]
  diff = diff-so-fancy | less -RFXx1,5
  log  = diff-so-fancy | less -RFXx1,5
  show = diff-so-fancy | less -RFXx1,5

[advice]
  statusHints = no
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
